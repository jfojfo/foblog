body {
  font-family: Verdana,Arial,Helvetica; font-size: 0.77em; 
  line-height: 20px;
  background: #fff url(images/bg.jpg) repeat-x;
  margin:0; padding:0;
}

form {
	margin:0px;
	padding:0px;
}

h1 { font-size: 20px; color: #FF7D00; margin: 0px 0px 5px 0px; }
h2 { font-size: 18px; color: #098CD9; margin: 5px 0px 5px 0px; }
h3 { font-size: 16px; margin: 0px 0px 5px 0px;  color: #000; }

a, .fakelink { text-decoration: none; color: #098CD9; cursor : pointer;}
a:hover, .fakelink:hover { color: #FF7D00; }

img { border: none; }
a img { border: none; }
a:hover img { border: none; }

input, textarea, select {
	background-color:#fff;
	border:1px solid #C1C0B5;
	color:#333333;
	font-family:"Lucida Sans Unicode",Tahoma,Arial,sans-serif;
	font-size:1em;
}

div#wrapper {
	margin : 0 auto;
	width : 900px;
}

#header {
	color : #fff;
	height: 120px;
	position :relative;
}

#header h1 {
	margin : 0;
	padding : 0 0 0 150px;
	font-size : 45px;
	height : 70px;
	line-height : 70px;
	vertical-align: bottom;
	background : url(images/logo.gif) no-repeat left 20px;
}

#header h1 a{
	color : #fff;
}

#header h2 {
  color: #fff;
  font-size: 12px;
  padding: 0 0 0 160px;
}

#login {
	height: 20px;
	text-align : right;
	color: #fff;
	font-size: 11px;
	position : absolute;
	right : 0;
}

#menu {
  width: 100%;
  padding-top: 7px;
}

#menu ul { list-style: none; margin: 0; padding:0; }
#menu li { list-style: none; float:left; overflow:hidden; display:inline; margin: 0px 5px 0 0; }
#menu li a { padding-left: 15px; color: #fff; display:block;  cursor: pointer; overflow:hidden; }
#menu li a span { padding-right: 15px; height: 23px; line-height: 23px; display:block; overflow:hidden;  }
#menu li a:hover { color: #000; background: url(images/menuleft.gif) no-repeat left bottom; } 
#menu .selected a { color: #000; background: url(images/menuleft.gif) no-repeat left bottom; overflow:hidden; }
#menu li a:hover span { color: #000; background: url(images/menuright.gif) no-repeat right bottom; }
#menu .selected a span { color: #000; background: url(images/menuright.gif) no-repeat right bottom; }

#content {
	float : left;
	width : 670px;
}

div.sidebar {
	float : right;
	width : 200px;
}

#footer {
	clear : both;
	text-align : center;
	font-size : 80%;
	background-color : #f4f4f4;
}

#page_panel {
	margin : 0 20px 0 20px;
	padding : 2px;
}

div.post {
	margin : 30px 20px 50px 0;
	padding : 2px;
}

div.tags {
	font-size : 10px;
	margin-bottom : 10px;
	font-style : italic;
}
div.tags a {
	color : #999;
}

div.comment {
	background-color : #f4f4f4;
	margin : 10px 20px 0 60px;
	border-bottom : 1px dotted;
	padding: 10px;
}

.title {
	font-size : 20px;
	margin-bottom : 3px;
}
.date {
	font-family : georgia;
}

textarea {
	width : 430px;
	height : 350px;
}
#title {
	width : 430px;
}

.postinfo, .commentinfo {
	font-size : 10px;
	text-align : right;
	padding-bottom : 0;
	margin-bottom : 0;
	font-style : italic;
}
blockquote {
	border: 1px solid #f9f9f9; 
	padding: 5px;
	display: block;
	white-space: pre;
	overflow: auto;
	font-size: 8pt
}

.meta {
  background: #f9f9f9;
  border: 1px solid #ccc;
  padding: 5px 20px;
  font-size: 11px;
}

.meta span {
  border-right: 1px solid #ccc;
  padding: 0 5px;
}

.meta .date, .meta .author {
  border-right: none;
}

/* {{{ Widgets */
.sidebar ul {
	width : 200px;
	padding : 0;
	margin : 0;
}

.sidebar li {
	font-size : 12px;
	list-style : none;
}

.sidebar h2 {
	background : #fff url(images/sidebar-header.gif) no-repeat left top;
	color : #000;
	font-weight : normal;
	border-bottom : 1px solid #999;
	font-family : Tahoma, Arial;
	font-size : 14px;
	padding: 5px 0 2px 10px;
	margin-top: 30px;
	text-transform:uppercase;
}

.sidebar ul li ul {
	background-color : #f9f9f9;
}

.sidebar ul li ul li {
	border-bottom : 1px dotted #666;
	padding-left: 10px;
}

.sidebar li a, .sidebar li .fakelink {
	display : block;
}

#recent_comments a{
	display:inline;
}

/* }}} */

table {
	font: 11px/24px Verdana, Arial, Helvetica, sans-serif;
	border-collapse: collapse;
}

th {
	padding: 0 0.5em;
	text-align: left;
	border-bottom: 1px solid #CCC;
	vertical-align : top;
}

tr.yellow td {
	border-top: 1px solid #FB7A31;
	border-bottom: 1px solid #FB7A31;
	background: #FFC;
}

td {
	border-bottom: 1px solid #CCC;
	padding: 0 0.5em;
}
